{
   "extends": "expo/tsconfig.base",
   "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-native",
      "lib": ["es2017"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "baseUrl": ".",
      "paths": {
         "_components": ["app/components"],
         "_images": ["app/images"],
         "_pages": ["app/images"],
         "_navigation": ["app/navigation"],
         "_theme": ["app/theme"],
         "_utils": ["app/utils"]
      }
   },
   "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
   ]
}
